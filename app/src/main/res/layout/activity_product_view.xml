<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".productView">

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/navbar"
        android:layout_width="match_parent"
        android:layout_height="90dp"
        android:background="@color/seed"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:background="@color/seed"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <com.google.android.material.imageview.ShapeableImageView
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:layout_marginLeft="5dp"
                android:background="@drawable/materialsymbolslightmenurounded" />

            <SearchView
                android:id="@+id/searchView"
                android:layout_width="270dp"
                android:layout_height="35dp"
                android:layout_marginLeft="20dp"
                android:background="@drawable/cuadradoborder"
                android:queryHint="Buscar"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <ImageButton
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginLeft="15dp"
                android:background="@drawable/systemuiconscart"
                android:onClick="cartView" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:gravity="center_vertical"
            android:onClick="direction"
            android:orientation="horizontal">

            <com.google.android.material.imageview.ShapeableImageView
                android:id="@+id/arrowMap"
                android:layout_width="11dp"
                android:layout_height="11dp"
                android:layout_marginLeft="10dp"
                android:src="@drawable/mapselection" />

            <com.google.android.material.textview.MaterialTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:text="CP 50260"
                android:textColor="@color/black"
                android:textSize="10dp" />

            <ImageButton
                android:layout_width="11dp"
                android:layout_height="11dp"
                android:background="@drawable/arrowleftshort" />
        </LinearLayout>

    </com.google.android.material.textfield.TextInputLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/conttitle"
        android:orientation="horizontal"
        app:layout_constraintTop_toBottomOf="@+id/navbar"
        tools:layout_editor_absoluteX="0dp">
        <com.google.android.material.textview.MaterialTextView
            android:layout_marginLeft="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Nuevo | +500 vendidos"/>
        <com.google.android.material.textview.MaterialTextView
            android:layout_marginLeft="120dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="califi"/>
    </LinearLayout>

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/title"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="21dp"
        android:layout_marginRight="20dp"
        android:textStyle="bold"
        android:textSize="20sp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Xtreme Pc Msi"
        app:layout_constraintTop_toBottomOf="@+id/conttitle"/>

    <LinearLayout
        android:id="@+id/moresale"
        android:layout_marginTop="15dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/title"
        android:orientation="horizontal">
        <com.google.android.material.textview.MaterialTextView
            android:layout_marginLeft="20dp"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:textSize="10sp"
            android:text="MAS VENDIDO"/>
        <com.google.android.material.textview.MaterialTextView
            android:textSize="10sp"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:text="3Â° en Computadoras y Servidores  Xtreme PC Gaming"/>
    </LinearLayout>
    
    <LinearLayout
        android:layout_marginTop="15dp"
        android:orientation="vertical"
        android:id="@+id/images"
        android:layout_width="match_parent"
        android:gravity="center"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/moresale">
        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/imageView"
            android:layout_width="300dp"
            android:padding="10dp"
            android:layout_height="300dp"/>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>